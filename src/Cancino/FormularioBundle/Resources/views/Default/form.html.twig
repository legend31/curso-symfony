{% extends "::boostrapbase.html.twig" %}
{% block title %}
Inicio de Sesion
{% endblock %}
{% block body %}
    <div class="container">
    <h1>Inicio de  Sesion</h1>
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <span class="alert-success">
        {{ flashMessage }}
            <hr>
    </span>
    </div>
{% endfor %}
    {# HAciendolo como dice symfony#}
    <div class="container">
        {{ form_start(form,{ 'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            {{ form_label(form.email, null, { 'label_attr': {'class': 'col-sm-2 control-label'} }) }}
            <div class="col-sm-8">
                {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            {# Haciendolo como dice symfony con html5#}
            <label for="form_pass" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-8">
                {{ form_widget(form.pass, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
                {{ form_widget(form.Login, { 'attr': {'class': 'btn btn-primary'} }) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
